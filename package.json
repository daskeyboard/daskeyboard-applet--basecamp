{
  "name": "daskeyboard-applet--basecamp",
  "displayName": "Basecamp",
  "version": "1.0.0",
  "description": "Displays Basecamp 3 notifications.",
  "longDescription": "Get a visual notification on your Das Keyboard Q series when there is a new Basecamp action.",
  "officialProductName": "Basecamp",
  "appUrl": "www.github.com",
  "isSingleton": false,
  "videoUrl": "",
  "icon": "assets/icon.png",
  "image": "assets/missing.png",
  "publisher": "Das Keyboard",
  "authorName": "Das Keyboard",
  "authorUrl": "https://twitter.com/daskeyboard",
  "issuesUrl": "https://github.com/metadot/daskeyboard-applet--basecamp/issues",
  "homePageUrl": "https://github.com/DasKeyboard/daskeyboard-applet--basecamp",
  "developerRepoUrl": "https://github.com/metadot/daskeyboard-applet--basecamp",
  "license": "GPL",
  "licenseUrl": "http://www.gnu.org/licenses/old-licenses/gpl-2.0.txt",
  "changelogUrl": "CHANGELOG.md",
  "readMeUrl": "README.md",
  "readMeEndUserUrl": "README_ENDUSER.md",
  "engines": {
    "das-keyboard-q": "3.1.2"
  },
  "main": "index.js",
  "scripts": {
    "test": "mocha"
  },
  "author": "Das Keyboard",
  "dependencies": {
    "daskeyboard-applet": "2.11.3"
  },
  "qConfig": {
    "geometry": {
      "width": 1,
      "height": 1
    },
    "authorization": {
      "type": "oauth2"
    },
    "questions": [
      {
        "key": "userId",
        "label": "User ID",
        "help": "To find out the ID of the account, copy it from the end of the URL of the Board. e.g: https://3.basecamp.com/<YOUR_REPO_ID>/projects",
        "supportUrl": "https://app.zenhub.com/select-organization",
        "required": true,
        "placeholder": "e.g: 7452696",
        "order": 1,
        "controlType": "textbox"
      },
      {
        "key": "color",
        "label": "Choose the color of the rmessageminder",
        "help": "",
        "required": true,
        "order": 1,
        "value": "#FFFF00",
        "controlType": "color"
      },
      {
        "key": "effect",
        "label": "Choose the effect of the reminder",
        "help": "",
        "required": true,
        "order": 2,
        "value": "BLINK",
        "controlType": "effect"
      }
    ]
  },
  "devDependencies": {
    "mocha": "^5.2.0"
  }
}
